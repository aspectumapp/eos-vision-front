{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "es2017",
    "jsx": "preserve",
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "rootDir": "./src",
    "baseUrl": "./src"
  },
  "exclude": [
    "node_modules",
    "**/*.stories.*",
    "dist"
  ]
}
